<div class="form-search">
	<%= form_tag(search_path, method: :get) do %>
		<%= text_field_tag :search, params[:search], :placeholder =>"検索" %>
		<%= submit_tag 'Search', class: "btn btn-primary" %>
	<% end %>
	</div>

<div class="container">
	<div class="row">
		<% if params[:search].blank? %>

			<% @photos.each do |photo| %>
				<div class="col-md-3">
					<%= link_to photo_path(photo.id) do %>
						<%= attachment_image_tag photo, :image, size:'100x100', format: 'jpeg' %>
					<% end %>
				</div>
			<% end %>

		<% else %>

			<% @users.each do |user| %>
				<%= user.name %>
			<% end %>

			<% @photo_tags.each do |tag| %>
				<%= tag.tag_list %>
			<% end %>

		<% end %>
	</div>
</div>

