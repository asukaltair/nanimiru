<div class="container">
	<div class="row">
		<%= form_with model: @photo, local: true do |f| %>

			<%= attachment_image_tag @photo, :image, size:'50x50', format: 'jpeg' %>
			<%= f.attachment_field :image %>

			<%= f.text_area :text %>

			<%= f.text_field :tag_list, value: @photo.tag_list.join(',') %>

			<%= f.submit 'Post' %>

		<% end %>
	</div>
</div>