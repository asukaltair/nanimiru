<%= form_with model: [@photo, @comment], local: true do |f| %>
	<%= f.label :comment %>
	<%= f.text_area :comment %>
	<div id="star">
		<%= f.hidden_field :star, id: :review_star %>
	</div>

	<%= f.submit 'Post' %>
<% end %>

<script>
	$('#star').raty({
		size     : 36,
		starOff:  '<%= asset_path('star-off.png') %>',
		starOn : '<%= asset_path('star-on.png') %>',
		starHalf: '<%= asset_path('star-half.png') %>',
		scoreName: 'comment[star]',
		half: true,
	});
</script>