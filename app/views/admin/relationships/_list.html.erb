<tr>
	<td class="admin_follow-table-image">
		<%= link_to admin_user_path(user) do %>
			<%= attachment_image_tag user, :image, class: "admin_follow-table-image-content", format: 'jpeg', fallback: 'no-user-image.png' %>
		<% end %>
	</td>
	<td class="admin_follow-table-name"><%= user.name %></td>
	<td class="admin_follow-table-photo"><%= pluralize(user.photos.count, "photo") %></td>
	<td class="admin_follow-table-follow">
		<%= link_to admin_user_followings_path(user), class: "admin_follow-table-following" do %>
			<%= pluralize(user.follower.count, "following") %>
		<% end %>
	</td>
	<td class="admin_follow-table-follow">
		<%= link_to admin_user_followers_path(user), class: "admin_follow-table-follower" do %>
			<%= pluralize(user.followed.count, "follower") %>
		<% end %>
	</td>
</tr>
