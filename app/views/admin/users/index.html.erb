<div class="container">
	<table>
		<% @users.each do |user| %>
			<tr>
				<td>
					<%= link_to admin_user_path(user) do %>
						<%= attachment_image_tag user, :image, size:'50x50', format: 'jpeg', fallback: 'no-user-image.png' %>
					<% end %>
				</td>
				<td><%= user.name %></td>
				<td><%= 'how many posts' %></td>
				<td>
					<%= link_to admin_user_followings_path(user) do %>
						<%= user.follower.count %> followings
					<% end %>
					<%= link_to admin_user_followers_path(user) do %>
						<%= user.followed.count %> followers
					<% end %>
				</td>
			</tr>
		<% end %>
</table>
</div>